<div class="container mt-3">
  <div class="row">
    <div class="col-md-6">
      <form method="post" action="/yourpet">
        <div class="mb-3">
          <label for="image" class="form-label">Image (By Link)</label>
          <input type="text" class="form-control" id="image" name="image" required />
        </div>
        <div class="mb-3">
          <label for="postTitle" class="form-label">Title</label>
          <input type="postTitle" class="form-control" id="postTitle" name="postTitle" required />
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <input type="description" class="form-control" id="description" name="description" />
        </div>
        <button type="submit" class="btn btn-primary">Add Your Pet</button>
      </form>
    </div>
  </div>
</div>
